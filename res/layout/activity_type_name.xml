<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/type_bg"
    tools:context="${relativePackage}.${activityClass}" >

     <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="49dp"
		android:textSize="18dp"
		android:textColor="#ff4646"
        android:layout_alignParentTop="true"
        android:text="也可以输入朋友的名字，恶搞Ta一下~" />
    
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:gravity="top"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="62dp"
        android:textSize="30dp"
        android:textColor="#7019e7"
        android:ems="10"
        android:focusable="true"
        android:hint="点击这里，\n输入你的名字" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:layout_marginRight="40.5dp"
        android:textSize="18dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/aniu"
        android:text="立即上头条>" />

    <ProgressBar
        android:id="@+id/typeGrogressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_name"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
